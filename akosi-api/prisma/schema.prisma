// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid()) @db.Uuid
  username        String    @db.VarChar(255) @unique  @map(name: "user_name")
  passwordHash    String    @db.VarChar(255) @map(name: "password_hash")
  createdDate     DateTime  @db.Timestamp()  @map(name: "created_date")         @default(now())
  lastUpdateDate  DateTime  @db.Timestamp()  @map(name: "last_updated_date")    @default(now())
  profileNames    UserProfileName[]
  activities      UserActivityLog[]
  
  @@map("users")
  @@index([id], name: "idx_users_id") 
  @@index([username], name: "idx_users_username") 
}

model UserProfileName {
  userId          String    @id @db.Uuid @map(name: "user_id")
  givenName       String    @db.VarChar(255) @map(name: "given_name")
  middleName      String?   @db.VarChar(255) @map(name: "middle_name")
  surname         String?   @db.VarChar(255) @map(name: "surname")
  patronymicName  String?   @db.VarChar(255) @map(name: "patronymic_name")
  honorificTitle  String?   @db.VarChar(255) @map(name: "honorific_title")
  nameSuffix      String?   @db.VarChar(255) @map(name: "name_suffix")
  createdDate     DateTime  @db.Timestamp()  @map(name: "created_date")         @default(now())
  lastUpdateDate  DateTime  @db.Timestamp()  @map(name: "last_updated_date")    @default(now())

  user            User      @relation(fields: [userId], references: [id])
  @@map("user_profile_names")
  @@index([userId], name: "idx_user_profile_names_userid") 
}

model UserActivityLog {
  userId          String    @db.Uuid @map(name: "user_id")
  activityId      Int       @db.Integer @map(name: "activity_id")
  createdDate     DateTime  @db.Timestamp()  @map(name: "created_date")    @default(now())
  
  user            User      @relation(fields: [userId], references: [id])
  @@id([userId, createdDate])
  @@map("user_activity_logs")
}